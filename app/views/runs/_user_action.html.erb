<% if run.joined_by_current_user? %>
  <%= button_to "Leave",
                run_player_path(run, run.current_user_player),
                method: :delete,
                class: "btn--primary"
  %>
<% else %>
  <%= button_to "Join",
                run_players_path(run),
                method: :post,
                class: "btn--primary"
  %>
<% end %>
