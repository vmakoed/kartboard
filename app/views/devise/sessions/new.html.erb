<div class="flex flex-col flex-grow px-6 py-8">
  <div class="flex flex-col flex-grow justify-end text-4xl font-extrabold tracking-[-0.04em] text-center">
    Ride fast and climb the leaderboard!
  </div>
  <div class="flex flex-col flex-grow justify-end">
    <% if flash.any? { |_, message| message.present? } %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Please check the following message(s):</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <% flash.each do |_, message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= button_to "Sign in with Google",
                  user_google_oauth2_omniauth_authorize_path,
                  class: "bg-slate-900 hover:bg-slate-700 text-white font-semibold py-3 px-4 rounded-lg w-full text-xl mt-5",
                  data: { turbo: false }
    %>
  </div>
</div>
