<div class="flex flex-col justify-center text-4xl font-extrabold tracking-[-0.04em] text-center h-50 py-8">
  Race results
</div>
<div class="overflow-hidden">
  <ul role="list" class="divide-y divide-gray-300">
    <% @contestants.each do |contestant| %>
      <li class="flex items-center px-6 py-4 text-lg gap-4">
        <div class="flex flex-grow gap-4 items-center">
          <div class="font-semibold"><%= contestant.place %></div>
          <div class="relative inline-flex items-center justify-center w-10 h-10 overflow-hidden bg-gray-100 rounded-full">
            <span class="font-medium text-gray-600 dark:text-gray-300"><%= contestant.user.name.split.map(&:first).join %></span>
          </div>
          <div class="font-semibold"><%= contestant.user.name %></div>
        </div>
        <div><%= '%+d' % contestant.score_log.score_difference %> pts</div>
      </li>
    <% end %>

  </ul>
</div>
<div class="flex flex-col flex-grow justify-end px-6 pb-8">
  <%= link_to "Back to leaderboard",
              root_path,
              class: "bg-slate-900 hover:bg-slate-700 text-white font-semibold py-3 px-4 rounded-lg w-full sm:w-auto sm:max-w-md sm:mx-auto text-xl mt-5 text-center"
  %>
</div>
