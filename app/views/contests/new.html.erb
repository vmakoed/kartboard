<%= form_with model: @contest, local: true do |form| %>
  <% if @contest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contest.errors.count, "error") %> prohibited this contest from being saved:</h2>

      <ul>
        <% @contest.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.fields_for :contestants do |contestant_form| %>
    <div>
      <%= contestant_form.label :place, 'Select a place:' %>
      <%= contestant_form.collection_select :place, Contestant::PLACES, :itself, :itself, include_blank: false %>
    </div>
    <div>
      <%= contestant_form.label :user_id, 'Select a contestant:' %>
      <%= contestant_form.collection_select :user_id, User.all, :id, :name, include_blank: true %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
