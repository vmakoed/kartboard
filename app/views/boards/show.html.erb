<div class="flex flex-col flex-grow overflow-y-auto justify-end mb-5">
  <div class="overflow-y-auto rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
      <% @users.each_with_index do |user, index| %>
        <li class="flex items-center px-6 py-4">
          <div class="flex flex-grow gap-4 items-center">
            <div class="font-bold"><%= index + 1 %></div>
            <div class="relative inline-flex items-center justify-center w-10 h-10 overflow-hidden bg-gray-100 rounded-full">
              <span class="font-medium text-gray-600 dark:text-gray-300"><%= user.name.split.map(&:first).join %></span>
            </div>
            <div class="font-bold"><%= user.name %></div>
          </div>
          <div><%= user.score %></div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="flex flex-col flex-grow justify-end px-6 pb-8">
  <%= link_to "New race",
              new_contest_path,
              class: "bg-slate-900 hover:bg-slate-700 text-white font-semibold py-3 px-4 rounded-lg w-full text-xl mt-5 text-center"
  %>
</div>
