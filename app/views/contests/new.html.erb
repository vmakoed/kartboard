<%= form_with model: @contest, local: true, class: "flex flex-col flex-grow" do |form| %>
  <div class="flex flex-col flex-grow items-center justify-end divide-y divide-gray-200">
    <% if @contest.errors.any? %>
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">Contest could not be submitted</h3>
            <div class="mt-2 text-sm text-red-700">
              <ul role="list" class="list-disc space-y-1 pl-5">
                <% @contest.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <%= form.fields_for :contestants do |contestant_form| %>
      <div class="flex items-baseline justify-center px-6 py-4 w-full">
        <%= contestant_form.collection_select :user_id,
                                              User.all,
                                              :id,
                                              :name,
                                              { include_blank: "Select contestant" },
                                              { class: "mt-2 mr-2 block rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600" }
        %> finished
        <%= contestant_form.collection_select :place,
                                              Contestant::PLACES,
                                              :itself,
                                              :ordinalize,
                                              { include_blank: false },
                                              { class: "mt-2 ml-2 block rounded-md border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-indigo-600" }
        %>
      </div>
    <% end %>
  </div>
  <div class="flex flex-col flex-grow justify-end px-6 pb-8">
    <%= form.submit class: "bg-slate-900 hover:bg-slate-700 text-white font-semibold py-3 px-4 rounded-lg w-full text-xl mt-5 text-center" %>
  </div>
<% end %>
